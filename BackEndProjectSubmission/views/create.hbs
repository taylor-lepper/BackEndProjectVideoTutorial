<main>


	<form class="text-center border border-light p-5" action="/course/create" method="POST">
		<h1>Create Course</h1>
		<div class="form-group">
			<label for="title">Course Title</label>
			<input
				type="text"
				class="form-control"
				placeholder="Course name"
				name="title"
				value="{{title}}"
			/>
		</div>
		<div class="form-group">
			<label for="description">Course Description</label>
			<input
				class="form-control"
				placeholder="Description"
				name="description"
				value="{{description}}"
			></input>
		</div>
		<div class="form-group">
			<label for="imageUrl">Image url</label>
			<input
				type="text"
				class="form-control"
				placeholder="Image Url"
				name="imgURL"
				value="{{imgURL}}"
			/>
		</div>
		<div class="form-check">
			{{#if isPublic}}
				<input
					type="checkbox"
					class="form-check-input"
					id="check-box"
					name="isPublic"
					checked
				/>
			{{else}}
				<input
					type="checkbox"
					class="form-check-input"
					id="check-box"
					name="isPublic"
				/>
			{{/if}}
			<label class="form-check-label" for="check-box">Public</label>
		</div>
		<div class="form-group">
			<label for="date">Current Date</label>
			<input type="date" name="courseCreatedOn" id="myDate" readonly />

			<script type="text/javascript">
				function SetDate() { var date = new Date(); var day =
				date.getDate(); var month = date.getMonth() + 1; var year =
				date.getFullYear(); if (month < 10) month = "0" + month; if (day
				< 10) day = "0" + day; var today = year + "-" + month + "-" +
				day; document.getElementById('myDate').value = today; }
			</script>
		</div>
		<button type="submit" class="btn btn-primary">Submit</button>

	</form>
	<body onload="SetDate();"></body>
</main>